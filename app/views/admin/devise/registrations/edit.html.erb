<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

<div class="container mt-5" style="max-width: 600px;">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-4 text-center">Edit Profile</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Name Fields -->
        <div class="mb-3">
          <%= f.label :firstname, "First Name", class: "form-label" %>
          <%= f.text_field :firstname, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :middlename, "Middle Name", class: "form-label" %>
          <%= f.text_field :middlename, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :lastname, "Last Name", class: "form-label" %>
          <%= f.text_field :lastname, class: "form-control", required: true %>
        </div>

        <!-- Email Field (read-only) -->
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, readonly: true, autocomplete: "email", class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-info">
            Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
          </div>
        <% end %>

        <!-- Password Fields -->
        <div class="mb-3">
          <%= f.label :password, "New Password (leave blank to keep current)", class: "form-label" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <div class="form-text"><%= @minimum_password_length %> characters minimum</div>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- Current Password -->
        <div class="mb-4">
          <%= f.label :current_password, "Current Password (required)", class: "form-label" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <!-- Actions -->
        <div class="d-flex justify-content-between align-items-center">
          <%= f.submit "Update", class: "btn btn-primary" %>
          <%= link_to "Back", :back, class: "btn btn-secondary" %>
        </div>
      <% end %>

      <hr class="my-4">

      <!-- Cancel Account -->
      <div class="text-center">
        <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure you want to cancel your account?" }, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>
