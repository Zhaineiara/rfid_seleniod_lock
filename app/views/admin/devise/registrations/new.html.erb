<h2>Register a user!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email Field -->
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <!-- Password Field -->
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <!-- Firstname Field -->
  <div class="field">
    <%= f.label :firstname, 'First Name' %><br />
    <%= f.text_field :firstname, placeholder: 'Enter first name', required: true %>
  </div>

  <!-- Middlename Field -->
  <div class="field">
    <%= f.label :middlename, 'Middle Name' %><br />
    <%= f.text_field :middlename, placeholder: 'Enter middle name' %>
  </div>

  <!-- Lastname Field -->
  <div class="field">
    <%= f.label :lastname, 'Last Name' %><br />
    <%= f.text_field :lastname, placeholder: 'Enter last name', required: true %>
  </div>

  <!-- Academic College Field -->
  <div class="field">
    <%= f.label :academic_college, 'Academic College' %><br />
    <%= f.select :academic_college, options_for_select([
                                                         ['CIE', 'CIE'],
                                                         ['COE', 'COE'],
                                                         ['CLA', 'CLA'],
                                                         ['COS', 'COS'],
                                                         ['CAFA', 'CAFA'],
                                                         ['CIT', 'CIT']
                                                       ]), {}, { required: true } %>
  </div>

  <!-- Role Field -->
  <div class="field">
    <%= f.label :role, 'Role' %><br />
    <%= f.select :role, options_for_select([['Admin', 'admin'], ['Professor', 'professor']]), {}, { required: true } %>
  </div>

  <div class="actions">
    <%= f.submit 'Sign up' %>
  </div>
<% end %>