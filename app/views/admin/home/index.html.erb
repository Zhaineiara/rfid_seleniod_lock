<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">List of Professors</h2>
  </div>

  <!-- Filter Form -->
  <form method="get" action="<%= home_index_path %>" class="mb-4">
    <div class="d-flex flex-wrap gap-2">
      <input type="text" name="fullname" class="form-control" placeholder="Name" value="<%= params[:fullname] %>" style="flex: 1; min-width: 150px;">

      <input type="text" name="card_number" class="form-control" placeholder="Card Number" value="<%= params[:card_number] %>" style="flex: 1; min-width: 150px;">

      <select name="academic_college" class="form-select" style="flex: 1; min-width: 150px;">
        <option value="">Academic College</option>
        <% User.academic_colleges.each do |key, _value| %>
          <option value="<%= key %>" <%= 'selected' if params[:academic_college] == key %>>
            <%= key %>
          </option>
        <% end %>
      </select>

      <select name="role" class="form-select" style="flex: 1; min-width: 150px;">
        <option value="">Role</option>
        <option value="admin" <%= 'selected' if params[:role] == 'admin' %>>Admin</option>
        <option value="professor" <%= 'selected' if params[:role] == 'professor' %>>Professor</option>
      </select>

      <button type="submit" class="btn btn-primary">Search</button>

      <button type="button" class="btn btn-secondary" onclick="window.location.href='<%= home_index_path %>'">Reset</button>
    </div>
  </form>

  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Card Number</th>
        <th>Card/Tag Status</th>
        <th>Academic College</th>
        <th>Role</th>
        <th>Email</th>
        <th>Registered Date</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% if @users.empty? %>
        <tr>
          <td colspan="8" class="text-center text-muted">No Matching Professors Found</td>
        </tr>
      <% else %>

        <% row_index = 1 %>
        <% @users.each do |user| %>
          <% if params[:card_number].present? %>
            <% card = user.cards.find_by(uid: params[:card_number]) %>
            <% if card %>
              <tr>
                <td><%= row_index %></td>
                <td><%= [user.firstname, user.middlename, user.lastname].compact.join(" ") %></td>
                <td><%= card.uid %></td>
                <td>
          <span class="badge <%= card.Active? ? 'bg-success' : 'bg-danger' %>">
            <%= card.status %>
          </span>
                </td>
                <td><%= user.academic_college %></td>
                <td><%= user.role.humanize %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime('%B %d, %Y %I:%M %p') %></td>
              </tr>
              <% row_index += 1 %>
            <% end %>
          <% else %>
            <% user.cards.each do |card| %>
              <tr>
                <td><%= row_index %></td>
                <td><%= [user.firstname, user.middlename, user.lastname].compact.join(" ") %></td>
                <td><%= card.uid %></td>
                <td>
          <span class="badge <%= card.Active? ? 'bg-success' : 'bg-danger' %>">
            <%= card.status %>
          </span>
                </td>
                <td><%= user.academic_college %></td>
                <td><%= user.role.humanize %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime('%B %d, %Y %I:%M %p') %>
                <td>
                  <div class="d-inline-flex gap-2">
                    <%= link_to edit_card_path(card),
                                class: "btn btn-sm btn-warning d-flex align-items-center",
                                title: "Edit" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>

                    <%= button_to card_path(card),
                                  method: :delete,
                                  class: "btn btn-sm btn-danger d-flex align-items-center",
                                  data: { turbo_confirm: 'Are you sure you want to delete this card?', turbo_method: 'delete' } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
              <% row_index += 1 %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>