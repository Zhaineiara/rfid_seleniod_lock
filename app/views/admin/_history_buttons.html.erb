  <%= link_to 'PROFESSOR', history_professor_path, class: "btn btn-outline-success text-uppercase fw-semibold px-4 py-2 shadow-sm uniform-width-btn #{'active' if current_page?(history_professor_path)}" %>
  <%= link_to 'CARD/TAG', history_card_path, class: "btn btn-outline-success text-uppercase fw-semibold px-4 py-2 shadow-sm uniform-width-btn #{'active' if current_page?(history_card_path)}" %>
