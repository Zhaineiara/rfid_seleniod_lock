<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="container my-5">
  <h2 class="text-center mb-4">Room Display</h2>

  <div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
      <% @rooms.each do |room| %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title text-center">Room <%= room.room_number %></h5>

              <!-- Display room status based on TimeTrack -->
              <% if @room_statuses[room.id] == "time_in" %>
                <p class="text-center text-danger fw-bold">Occupied</p>
              <% else %>
                <p class="text-center text-success fw-bold">Vacant</p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>