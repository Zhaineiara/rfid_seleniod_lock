<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<h1>Register a new Room</h1>

<%= form_with(model: @room, method: :post, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :room_number %>
    <%= form.number_field :room_number, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :room_status, class: "form-label" %>
    <%= form.select :room_status, Room.room_statuses.keys.map { |status| [status.capitalize, status] },
                    { include_blank: "Select Room Status" },
                    { class: "form-select", required: true } %>
  </div>

  <%= form.submit 'Register Room' %>
<% end %>
