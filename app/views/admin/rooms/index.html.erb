<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Room Management</h2>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-dark">
      <tr>
        <th>UID</th>
        <th>Card or Tag Status</th>
        <th>User</th>
        <th>Academic College</th>
        <th>Role</th>
        <th>Email</th>
        <th>Registered Date</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <% if user.cards.present? %>
          <% user.cards.each do |card| %>
            <tr>
              <% if card.uid.present? %>
                <td><%= card.uid %></td>
              <% end %>

              <td>
              <span class="badge <%= card.status == 'active' ? 'bg-success' : 'bg-danger' %>">
                <%= card.status %>
              </span>
              </td>

              <td><%= user.firstname %> <%= user.middlename %> <%= user.lastname %></td>
              <td> <%= user.academic_college %> </td>
              <td> <%= user.role.humanize %> </td>
              <td> <%= user.email %> </td>
              <td><%= user.created_at.strftime('%B %d, %Y %I:%M %p') %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td>No card registered!</td>
            <td>None</td>

            <td><%= user.firstname %> <%= user.middlename %> <%= user.lastname %></td>
            <td> <%= user.academic_college %> </td>
            <td> <%= user.role.humanize %> </td>
            <td> <%= user.email %> </td>
            <td><%= user.created_at.strftime('%B %d, %Y %I:%M %p') %></td>
          </tr>
        <% end %>

      <% end %>
      </tbody>
    </table>
  </div>
</div>