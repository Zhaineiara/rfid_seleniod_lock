<!-- Header Section -->
<div class="header-bg py-3">
  <div class="container-custom d-flex justify-content-between align-items-center">
    <!-- Logo with Navigation Dropdown aligned to left -->
    <div class="d-flex align-items-center">
      <div class="dropdown me-2">
        <a
          href="#"
          class="d-flex align-items-center text-decoration-none dropdown-toggle"
          id="logoDropdown"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <img src="/assets/tup.jpg" alt="TUP Logo" class="img-fluid" style="height: 50px; width: 50px; border-radius: 50%;">
        </a>
        <ul class="dropdown-menu" aria-labelledby="logoDropdown">
          <li><a class="dropdown-item" href="#">Home</a></li>
          <li><%= link_to "Cards", cards_path, class: "dropdown-item" %></li>
          <li><a class="dropdown-item" href="#">Contact</a></li>
        </ul>
      </div>
      <!-- Brand Name -->
      <div class="brand-name">Technological University of the Philippines</div>
    </div>

    <!-- Profile Section -->
    <div class="dropdown">
      <a
        href="#"
        class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
        id="profileDropdown"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        <img
          src="https://via.placeholder.com/40"
          alt="Profile Picture"
          class="rounded-circle me-2"
          style="height: 40px; width: 40px;"
        >
        <span>Username</span>
      </a>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
        <li><a class="dropdown-item" href="#">Profile</a></li>
        <li><%= button_to "Sign Out", destroy_admin_user_session_path, method: :delete, class: "dropdown-item" %></li>
      </ul>
    </div>
  </div>
</div>